<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userStatsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_statistics"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:padding="16dp"
        android:layout_marginTop="90dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_score"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/totalScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_score_value"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average_response_time"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/averageResponseTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average_response_time_value"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_scores"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/topScoresLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Add TextViews dynamically for top scores -->

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/previous_5_scores"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/previousScoresLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Add TextViews dynamically for previous scores -->

    </LinearLayout>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:layout_margin="16dp"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>
